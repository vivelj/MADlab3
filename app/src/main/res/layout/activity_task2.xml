<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".task2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_above="@+id/linLay"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="280dp"
            android:layout_marginBottom="-20dp"
            android:text="Наименование товара" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linLay"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="68pt"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="80pt"
            android:layout_marginBottom="-20dp"
            android:text="Цена руб/шт" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linLay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="122pt"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20pt"
            android:layout_marginBottom="-20dp"
            android:text="Количество шт" />

        <LinearLayout
            android:id="@+id/linLay"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp">

            <ListView
                android:id="@+id/listView1"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="350dp"
            android:text="Добавить" />

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="350dp"
            android:text="Завершить заказ" />

        <EditText
            android:id="@+id/Note1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="191dp"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:hint="Наименование товара"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/Note2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Note1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="191dp"
            android:layout_marginBottom="25dp"
            android:ems="10"
            android:hint="Цена руб/шт"
            android:inputType="number"
            android:text="" />

        <EditText
            android:id="@+id/Note3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Note2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="191dp"
            android:ems="10"
            android:hint="Количество шт"
            android:inputType="number"
            android:text="" />
    </RelativeLayout>
</ViewFlipper>